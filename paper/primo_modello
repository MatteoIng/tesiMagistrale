	post: Psmbd = 1
	
	# exploit on the execution of PHP as a CGI application
	Pphpcgi,
	pre: pphpcgi < T1 ∧ pscan ≥ T2 and active
	post: Pphpcgi = 1
	
	# exploit on the ircd daemon
	# ircd usato per mettere in ascolto il server per i client
	Pircd,
